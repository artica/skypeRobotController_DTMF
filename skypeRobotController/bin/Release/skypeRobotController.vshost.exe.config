<?xml version="1.0"?>
<configuration>
  <configSections>
    <sectionGroup name="applicationSettings" type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="skypeRobotController.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" requirePermission="false" />
    </sectionGroup>
    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="skypeRobotController.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0,Profile=Client"/>
  </startup>
  <applicationSettings>
    <skypeRobotController.Properties.Settings>
      <setting name="failedToSendMessage" serializeAs="String">
        <value>Magabot didn't hear you... \nIt isn't connected yet.</value>
      </setting>
      <setting name="welcomeMessage" serializeAs="String">
        <value>Hello!  
Please wait until we give you the control of the robot.</value>
      </setting>
      <setting name="waitMessage" serializeAs="String">
        <value>You're not controlling Magabot yet. 
Wait for you turn...</value>
      </setting>
      <setting name="controllerMessage" serializeAs="String">
        <value>Hurray!!! 
Magabot is now under your command. 
Remember: 
- '1' to Assisted Navigation    
  - 'w' to go forward 
  - 's' to go backward
  - 'a' to go left
  - 'd' to go right
  - 'p' to stop
- '2' to Obstacle Avoidance
- '3' to Line Following</value>
      </setting>
      <setting name="adminMessage" serializeAs="String">
        <value>"Hello, 
You've been selected as my admin"</value>
      </setting>
    </skypeRobotController.Properties.Settings>
  </applicationSettings>
  <userSettings>
    <skypeRobotController.Properties.Settings>
      <setting name="port" serializeAs="String">
        <value>6969</value>
      </setting>
    </skypeRobotController.Properties.Settings>
  </userSettings>
</configuration>
